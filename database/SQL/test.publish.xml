<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="12.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <IncludeCompositeObjects>True</IncludeCompositeObjects>
    <TargetDatabaseName>edudoc.SQL</TargetDatabaseName>
    <DeployScriptFileName>edudoc.sql</DeployScriptFileName>
    <TargetConnectionString>Server=tcp:sql-edudoc-test.database.windows.net,1433;Initial Catalog=edudoc.SQL;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;Authentication="Active Directory Interactive";</TargetConnectionString>
    <ProfileVersionNumber>1</ProfileVersionNumber>
    
    <!-- Data Protection Settings -->
    <BlockOnPossibleDataLoss>False</BlockOnPossibleDataLoss>
    <DropObjectsNotInSource>True</DropObjectsNotInSource>
    <GenerateSmartDefaults>True</GenerateSmartDefaults>
    <BackupDatabaseBeforeChanges>False</BackupDatabaseBeforeChanges>
    
    <!-- Deployment Behavior -->
    <CreateNewDatabase>False</CreateNewDatabase>
    <ScriptDatabaseCompatibility>True</ScriptDatabaseCompatibility>
    <ScriptDatabaseCollation>True</ScriptDatabaseCollation>
    
    <!-- Transaction Handling -->
    <IncludeTransactionalScripts>True</IncludeTransactionalScripts>
    
    <!-- Protection Settings - Consistent Strategy -->
    <DoNotDropUsers>True</DoNotDropUsers>
    <DoNotDropLogins>True</DoNotDropLogins>
    <DoNotDropPermissions>False</DoNotDropPermissions>
    <DoNotDropServerRoles>False</DoNotDropServerRoles>
    <DoNotDropDatabaseRoles>False</DoNotDropDatabaseRoles>
    <DoNotDropDatabaseTriggers>False</DoNotDropDatabaseTriggers>
    <DoNotDropServerTriggers>False</DoNotDropServerTriggers>
    <DoNotDropApplicationRoles>False</DoNotDropApplicationRoles>
    <DoNotDropCredentials>False</DoNotDropCredentials>
    <DoNotDropCertificates>False</DoNotDropCertificates>
    <DoNotDropClrUserDefinedTypes>False</DoNotDropClrUserDefinedTypes>
    <DoNotDropExtendedProperties>False</DoNotDropExtendedProperties>
    
    <!-- Exclusion Settings -->
    <ExcludeUsers>True</ExcludeUsers>
    <ExcludeLogins>True</ExcludeLogins>
    <ExcludeServerRoleMembership>True</ExcludeServerRoleMembership>
    <ExcludeServerRoles>True</ExcludeServerRoles>
    <ExcludeApplicationRoles>True</ExcludeApplicationRoles>
    
    <!-- Performance Settings -->
    <AllowIncompatiblePlatform>False</AllowIncompatiblePlatform>
    <DisableAndReenableDdlTriggers>True</DisableAndReenableDdlTriggers>
    <DoNotAlterChangeDataCaptureObjects>True</DoNotAlterChangeDataCaptureObjects>
    <DoNotAlterReplicatedObjects>True</DoNotAlterReplicatedObjects>
    
    <!-- Verification Settings -->
    <VerifyDeployment>True</VerifyDeployment>
    <VerifyExtendedProperties>True</VerifyExtendedProperties>
    <IgnoreColumnOrder>False</IgnoreColumnOrder>
  </PropertyGroup>
</Project> 